{% extends 'CatalogueBundle::mybase.html.twig' %}

{% block body -%}{{ parent() }}
    <h1>Device list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Vendor</th>
                <th>Model</th>
                <th>Persons</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('devices_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.devicetype != null %}{{ entity.devicetype.name }}{% endif %}</td>
                <td>{% if entity.vendor != null %}{{ entity.vendor.name }}{% endif %}</td>
                <td>{{ entity.model }}</td>
                <td>{% for person in entity.persons %}{{ person.name }}{% endfor %}</td>
                <td>
                    <a href="{{ path('devices_show', { 'id': entity.id }) }}">S</a>
                    <a href="{{ path('devices_edit', { 'id': entity.id }) }}">E</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('devices_new') }}">
                Create a new entry
            </a>

    {% endblock %}
