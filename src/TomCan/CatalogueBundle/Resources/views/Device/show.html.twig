{% extends 'CatalogueBundle::mybase.html.twig' %}

{% block body -%}{{ parent() }}
    <h1>Device</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ entity.model }}</td>
            </tr>
            <tr>
                <th>Partno</th>
                <td>{{ entity.partNo }}</td>
            </tr>
            <tr>
                <th>Serialno</th>
                <td>{{ entity.serialNo }}</td>
            </tr>
            <tr>
                <th>Persons</th>
                <td>{% for person in entity.persons %}{{ person.name }}<br />{% endfor %}</td>
            </tr>
            <tr>
                <th>Licenses</th>
                <td>{% for license in entity.licenses %}{{ license.softwaretitle.name }} {{ license.softwaretitle.version }}<br />{% endfor %}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('devices') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('devices_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
